<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/imagen_del_producto"
            android:src="@drawable/ic_product" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/t_tulo_del_producto" />

            <TextView
                android:id="@+id/tvNormalPrice"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:textColor="@color/colorGrey"
                android:layout_height="wrap_content"
                android:text="@string/precio_normal" />

            <TextView
                android:id="@+id/tvDiscountPrice"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/precio_con_descuento" />

            <LinearLayout
                android:id="@+id/llColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/vColor1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorRed" />

                <View
                    android:id="@+id/vColor2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorGreen" />

                <View
                    android:id="@+id/vColor3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/colorYellow" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
